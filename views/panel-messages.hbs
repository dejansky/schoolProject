<section class="panel-display col-10">


    <table class="panel-table col-12">
        <tr>
            <th colspan="3" class="panel-th">
                Welcome to the panel
            </th>
        </tr>

        <tr>
            <td colspan="3">
                <p>Your contact information</p>
            </td>
        </tr>
    </table>
    
    {{#if guest_messages.length}}
        {{#each guest_messages}}
            <section class="panel-contact">
                <form method="POST">
                    <div id="row">
                        <p>
                            Message ID: 
                        </p>
                        <input type="text" name="message_id" value="{{id}}" readonly>
                    </div>
                    <div id="row">
                        <p>
                            Name:{{first_name}} {{last_name}}
                        </p>
                    </div>
                    <div id="row">
                        <p>
                            Email: {{email}}
                        </p>
                    </div>
                    <div id="row">
                        <p>
                            Message:
                        </p>
                        <br>
                        <p id="panel-contact-mewssage-wrapper">
                            {{message}}
                        </p>
                    </div>
                    <footer id="panel-contact-footer">
                        <input type="submit" value="DELETE">
                    </footer>
                </form>
            </section>
        {{/each}}
    {{else}}

    {{/if}}
</section>